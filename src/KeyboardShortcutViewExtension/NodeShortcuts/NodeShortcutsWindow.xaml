<Window x:Class="KeyboardShortcutViewExtension.NodeShortcuts.NodeShortcutsWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KeyboardShortcutViewExtension.NodeShortcuts"
             mc:Ignorable="d" d:DesignWidth="300" ResizeMode="NoResize" SizeToContent="WidthAndHeight" Width="200" Height="320.478">
    <Grid Margin="0,147,0,0">
        <StackPanel Name="sp" HorizontalAlignment="Left" Width="auto" Height="auto" VerticalAlignment="Top" />
        <Button Name="AddToShortcutsButton" Content="Create" Height="34" Margin="0,-72,1,0" VerticalAlignment="Top" Click="Button_Click">
            <Button.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveCaptionColorKey}}"/>
            </Button.Background>
        </Button>
        <Label Content="Current Shortcuts:" HorizontalAlignment="Left" Height="28" Margin="0,-33,0,0" VerticalAlignment="Top" Width="154" FontWeight="Bold"/>
        <Label Content="Add Selected Node:" HorizontalAlignment="Left" Height="28" Margin="0,-105,0,0" VerticalAlignment="Top" Width="154" FontWeight="Bold"/>

    </Grid>
</Window>
